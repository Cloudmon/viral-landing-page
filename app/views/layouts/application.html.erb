<!DOCTYPE html>
<html>
<head>
  <title><%= site_title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <meta name="description" content="<%= site_title %>" /> 

</head>
<body>

  <div id="floater"></div>
  <div id="centered">

    <div id="side">
      <img src="http://placekitten.com/g/250/400">
    </div>
 
    <div id="content">
      <%= yield %> 
    </div>
 
  </div>
 
  <div id="bottom">
    <p>
      Copyright &copy; <%= DateTime.now.year %> 
    </p>
  </div>

</body>
</html>
